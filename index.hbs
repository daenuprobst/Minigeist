{{!< default}}
<section class="row" role="main">
	{{#foreach posts}}
	<article class="{{post_class}}">
		<header class="post-header">
			<h3 class="post-title"><a href="{{url}}">{{{title}}}</a></h3>
			<p class="post-info">Written by {{author.name}} on <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time></p>
			{{#if tags}}
			<p class="post-tags"><i class="fa fa-tag"></i> {{tags}}</p>
			{{/if}}
		</header>
		<section class="post-excerpt">
			<p>{{excerpt}}&nbsp;<a href="{{url}}">[&hellip;]</a></p>
		</section>
	</article>
	{{/foreach}}
</section>

{{pagination}}
